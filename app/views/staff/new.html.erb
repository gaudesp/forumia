    <%= p.input :undelete_message, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :kill_message, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :kick_user, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :unkick_user, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :ban_user, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :unban_user, as: :boolean, wrapper: :custom_boolean_switch %>
