    <%= p.input :kill_role, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :update_permission, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :priority_permission, as: :boolean, wrapper: :custom_boolean_switch %>
  <% end %>
  <%= f.submit %>
<% end %>