    <%= p.input :unlock_topic, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :delete_topic, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :undelete_topic, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :kill_topic, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :pin_topic, as: :boolean, wrapper: :custom_boolean_switch %>
    <%= p.input :unpin_topic, as: :boolean, wrapper: :custom_boolean_switch %>
